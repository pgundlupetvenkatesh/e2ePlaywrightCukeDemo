{
    "default": {
        "publishQuiet": true,
        "dryRun": false,
        "paths": [
            "features/"
        ],
        "import": [
            "features/support/*.ts",
            "features/support/**/*.ts",
            "features/step_definitions/*.ts"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "requireModule": ["ts-node/esm"],
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ]
    }
}